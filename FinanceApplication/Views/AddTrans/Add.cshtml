@model FinanceApplication.Models.entitymodellists

@{
    <h1>@(ViewData["Title"] ?? "Default Title")</h1>
}

<div class="container mt-5">
    <form method="post" asp-page-handler="SubmitForm">
        <div class="form-group">
            <label for="entityies">Select Entity:</label>
            <select class="form-control" id="entityselect" asp-for="entityview">
                <option value="">Select...</option>
                @foreach (var option in Model.entityview)
                {
                    <option value="@option.Id">@option.FirstName@option.LastName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="model2Select">Select Domain:</label>
            <select class="form-control" id="domainselect" asp-for="domainview">
                <option value="">Select...</option>
                @foreach (var option in Model.domainview)
                {
                    <option value="@option.Id">@option.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


